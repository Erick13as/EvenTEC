<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado seleccionado -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" /> <!-- Color de fondo predeterminado -->
            <corners android:radius="10dp" /> <!-- Cambia el color a tu elección para seleccionado -->
        </shape>
    </item>
    <!-- Estado predeterminado -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Cambia el color a tu elección para predeterminado -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>

